<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".profile.ProfileActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="Profile"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Orange Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/orange">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp">

                    <!-- Profile Image + Camera Button -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/ic_profile_placeholder"
                            app:civ_border_width="4dp"
                            app:civ_border_color="@color/white"
                            android:scaleType="centerCrop" />

                        <ImageButton
                            android:id="@+id/btnChangePhoto"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom|end"
                            android:background="@drawable/circle_white"
                            android:src="@android:drawable/ic_menu_camera"
                            android:contentDescription="Change photo"
                            android:visibility="gone"
                            app:tint="@color/orange" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Jamie Scott"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="32dp"
                        android:layout_marginTop="12dp"
                        android:hint="Your name"
                        app:boxStrokeColor="@color/white"
                        app:hintTextColor="@color/white"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvCurrentStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="5 Ã— Streak"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Your highest streak is 10!"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/layoutEditButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnCancel"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/btnSave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="@color/white"
                            android:text="Save"
                            android:textColor="@color/orange" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu Items (your existing ones) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/menu_background"
                android:orientation="vertical">
                <!-- ... keep your menu items exactly as they were ... -->
            </LinearLayout>

            <TextView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:padding="18dp"
                android:text="Log Out"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />
            

            <TextView
                android:id="@+id/itemSettings"
                style="@style/ProfileMenuItem"
                android:text="Settings"
                app:drawableStartCompat="@drawable/ic_settings_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33FFFFFF"
                android:layout_marginStart="72dp" />

            <TextView
                android:id="@+id/itemRetakeSurvey"
                style="@style/ProfileMenuItem"
                android:text="Re-take Survey"
                app:drawableStartCompat="@drawable/ic_survey_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33FFFFFF"
                android:layout_marginStart="72dp" />

            <TextView
                android:id="@+id/itemChangeGoal"
                style="@style/ProfileMenuItem"
                android:text="Change Streak Goal"
                app:drawableStartCompat="@drawable/ic_flame_24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#33FFFFFF"
                android:layout_marginStart="72dp" />

            <TextView
                android:id="@+id/itemChangeColor"
                style="@style/ProfileMenuItem"
                android:text="Change Color Scheme"
                app:drawableStartCompat="@drawable/ic_palette_24" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/buttonFragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
