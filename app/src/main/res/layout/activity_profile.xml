<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".profile.ProfileActivity">

    <!-- Toolbar with back arrow -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="Profile"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="@color/white" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="56dp">

            <!-- Orange gradient header card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/orange">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Avatar with circular border -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_profile_placeholder"
                            android:background="@drawable/circle_background"
                            android:scaleType="centerCrop"
                            android:clipToOutline="true"
                            android:contentDescription="@string/profile_picture" />
                    </FrameLayout>

                    <!-- Name -->
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Jamie Scott"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <!-- Current streak -->
                    <TextView
                        android:id="@+id/tvCurrentStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="5 Ã— Streak"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Highest streak subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="Your highest streak is 10!"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu items container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/menu_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemSettings"
                    style="@style/ProfileMenuItem"
                    android:text="Settings"
                    app:drawableStartCompat="@drawable/ic_settings_24" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#33FFFFFF"
                    android:layout_marginStart="72dp" />

                <TextView
                    android:id="@+id/itemRetakeSurvey"
                    style="@style/ProfileMenuItem"
                    android:text="Re-take Survey"
                    app:drawableStartCompat="@drawable/ic_survey_24" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#33FFFFFF"
                    android:layout_marginStart="72dp" />

                <TextView
                    android:id="@+id/itemChangeGoal"
                    style="@style/ProfileMenuItem"
                    android:text="Change Streak Goal"
                    app:drawableStartCompat="@drawable/ic_flame_24" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#33FFFFFF"
                    android:layout_marginStart="72dp" />

                <TextView
                    android:id="@+id/itemChangeColor"
                    style="@style/ProfileMenuItem"
                    android:text="Change Color Scheme"
                    app:drawableStartCompat="@drawable/ic_palette_24" />

            </LinearLayout>

            <!-- Log Out button -->
            <TextView
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:padding="18dp"
                android:text="Log Out"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fragment Container for Bottom Navigation Buttons - ADD THIS! -->
    <FrameLayout
        android:id="@+id/buttonFragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>