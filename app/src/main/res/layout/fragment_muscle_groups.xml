<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workout.muscleGroupsFrag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/bicepsCard"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                >

                <LinearLayout
                    android:id="@+id/bicepLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/bicepTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bicepHeader"
                        android:textSize="20sp" />

                    <ListView
                        android:id="@+id/bicepLV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/backCard"
                android:layout_width="match_parent"
                android:layout_height="70dp">

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/chestCard"
                android:layout_width="match_parent"
                android:layout_height="66dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/legsCard"
                android:layout_width="match_parent"
                android:layout_height="68dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>