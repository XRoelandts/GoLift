<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="80dp"
    android:layout_marginBottom="200dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Gym Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_gym"
            android:tint="@color/white"
            android:contentDescription="Gym Icon" />

        <!-- Gym Name -->
        <TextView
            android:id="@+id/tvGymName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Gym Name"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Distance -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location"
                android:tint="@color/white"
                android:contentDescription="Location" />

            <TextView
                android:id="@+id/tvGymDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5 km away"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvGymDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Description of the gym goes here"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:alpha="0.9"
            android:lineSpacingExtra="4dp" />

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRemoveGym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Remove from Saved"
            android:textColor="@color/orange"
            app:backgroundTint="@color/white"
            app:cornerRadius="20dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>