<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".workout.WorkoutActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/buttonFragments"
        android:name="com.example.golift.pageButtonsFragment"
        android:layout_width="408dp"
        android:layout_height="82dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/workoutVP"
        android:layout_width="409dp"
        android:layout_height="485dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutTab" >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/workoutTab"
            android:layout_width="407dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="15dp">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Workouts" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscle Groups" />

        </com.google.android.material.tabs.TabLayout>
    </androidx.viewpager2.widget.ViewPager2>

    <TextView
        android:id="@+id/WorkoutsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="38dp"
        android:text="@string/workoutHeader"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>